<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.vega"
       version="1.0.2"
       name="VEGA Concerts"
       provider-name="Jeppe Toustrup">
	<requires/>
	<extension point="xbmc.python.pluginsource"
	           library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>VEGA concert player</summary>
		<description>Plays recorded concerts from the music venue VEGA in Copenhagen, Denmark. Check www.vega.dk for concert listings.</description>
		<platform>osx linux</platform>
	</extension>
</addon>
